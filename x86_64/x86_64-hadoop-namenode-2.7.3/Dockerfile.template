FROM pc-master:5000/x86_64-hadoop-base-2.7.3:BUILDCHAINTAG
MAINTAINER PocketCluster <stkim1@pocketcluster.io>

# ROOT USER
USER root

# Enable SSHD
RUN rm -f /etc/service/sshd/down

# Prepare files
COPY hadoop-launch.sh /etc/my_init.post_runit.d/01-hadoop-launch.sh
COPY hadoop-stop.sh   /etc/my_init.pre_shutdown.d/02-hadoop-stop.sh

RUN chmod a+x /etc/my_init.post_runit.d/01-hadoop-launch.sh &&\
    chmod a+x /etc/my_init.pre_shutdown.d/02-hadoop-stop.sh

CMD ["/sbin/my_init"]

EXPOSE 22 7373 7946 8030 8031 8032 8033 8040 8042 8060 8088 9000 10020 19888 50010 50020 50060 50070 50075 50090 50475 54310 54311